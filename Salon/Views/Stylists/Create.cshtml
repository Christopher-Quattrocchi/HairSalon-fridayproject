<body>
    <div class="stylist-form">
        <h4>Add a new stylist</h4>
        @using (Html.BeginForm("Create", "Stylists", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Specialty)
                @Html.TextBoxFor(model => model.Specialty, new { @class = "form-control" })
            </div>

            <input type="submit" value="Add new stylist" class="btn btn-primary" />
        }
        <h4>Need to manage stylists? @Html.ActionLink("Go back to list", "Index")</h4>
    </div>
</body>