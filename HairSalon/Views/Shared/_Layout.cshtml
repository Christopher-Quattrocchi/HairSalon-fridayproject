<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hair Salon</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="navbar">
        <a href="/stylists/index">Stylists</a>
        <a href="/clients/index">Clients</a>
        <a href="/stylists/create">Add Stylist</a>
        <a href="/clients/create">Add Client</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @(DateTime.Now.Year) - Hair Salon</p>
    </footer>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>