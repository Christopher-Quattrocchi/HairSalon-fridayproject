@model HairSalon.Models.Client

@{
    ViewData["Title"] = "Add New Client";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>There are some errors in your form:</strong>
        <ul>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                @foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StylistId">Stylist</label>
        <select asp-for="StylistId" asp-items="ViewBag.Stylists" class="form-control">
          <option value="">Select a Stylist</option>
        </select>
        <span asp-validation-for="StylistId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Client</button>
</form>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
