@model HairSalon.Models.Stylist

@{
    ViewBag.Title = "Delete Stylist";
}

<h2>Delete Stylist</h2>

<h3>Are you sure you want to delete this stylist?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>Specialty</dt>
        <dd>@Html.DisplayFor(model => model.Specialty)</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Stylists", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.StylistId)
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>